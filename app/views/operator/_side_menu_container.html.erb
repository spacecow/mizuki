<div id="side_menu_container">
  <div id="user_nav">
    <% if god? && iphone? %>
      <%= link_to "Full Site", :iphone => 0 %>
    <% elsif god? %>
      <%= link_to "Mobile Site", :iphone => 1 %>
    <% end %>
    <% if current_user %>
    <%= link_to t(:log_out), logout_path %>
    <% else %>
    <%# link_to t(:sign_up), signup_path %>
    <%= link_to t(:log_in), login_path %>
    <% end %>
  </div>
  <div class="clear"></div>

  <div id="side_bar_container">
    <div id="side_bar">
      <ul>
        <%= "---#{request.path}---" %>
        <li class="<%= request.path =~ /^\/$/ ? "selected" : "" %>"><%= link_to "Home", root_path %></li>
        <li class="<%= request.url =~ /events/ ? "selected" : "" %>"><%= link_to "Events", events_path %></li>
        <li class="<%= request.url =~ /galleries/ ? "selected" : "" %>"><%= link_to "Gallery", galleries_path %></li>
      </ul>
      <div class="clear"></div>
    </div>
  </div>
  <% if !(request.url =~ /show2/) %>
  <div id="tweet_container">
    <h1>Mama Tweets</h1>
    <div class="tweet">
      <div id="content">
        <%= tweet_content %>
      </div>
      <div id="ago" class="time">
        <%= tweet_ago %>
      </div>
    </div>
  </div>
  <% end %>
</div>
