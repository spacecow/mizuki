<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag 'screen.css', :media => 'screen, projection' %>
    <%= stylesheet_link_tag 'print.css', :media => 'print' %>
    <!--[if lt IE 8]>
      <%= stylesheet_link_tag 'ie.css', :media => 'screen, projection' %>
    <![endif]-->   
    <%= stylesheet_link_tag "application", "formtastic" %>
    <%= stylesheet_link_tag "iphone" if iphone? %>
    <%= javascript_include_tag 'jquery', 'rails', 'application' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <div class="clear"></div>
      <div id="contents">
        <div id="site_nav">
          <% if god? && iphone? %>
            <%= link_to "Full Site", :iphone => 0 %>
          <% elsif god? %>
            <%= link_to "Mobile Site", :iphone => 1 %>
          <% end %>
        </div>
        <%= render "/operator/side_menu_container" %>

        <%= content_tag :h1, yield(:title) if show_title? %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
