<div id="main_container">
  <div id="list">

    <ul id="events">
      <% for event in @events %>
      <li>
        <span id="name"><%= link_to event.name, event if can? :show, event %></span>
        <span id="links">
          <%= link_to t(:edit), edit_event_path(event) if can? :edit, event %>
          <%= link_to t(:del), event, :confirm => sure?, :method => :delete if can? :destroy, event %>
          <%= link_to t(:gallery), event.gallery if event.gallery && can?(:show, event.gallery) %>
        </span>
        <div class="clear"></div>
        <span id="time"><%= event.when %></span>
      </li>
      <% end %>
    </ul>

    <div id="bottom_links">
      <%= link_to new(:event), new_event_path if can? :new, Event %>
    </div>
  </div>
</div>
